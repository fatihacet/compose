html, body, #main-container
  width                     100%
  height                    100%
  overflow                  hidden

body
  font-family               'Open Sans', sans-serif


#landing,
#main-container > nav,
#main-container > section
  height                    100%
  float                     left
  overflow-x                hidden
  overflow-y                auto

#landing
  width                     100%

#sidebar
  width                     200px
  background                #1B2224


#mail-list
  width                     400px
  border-right              1px solid #F1F4F5
  box-sizing                border-box


#mail-content
  padding                   30px 30px 30px
  box-sizing                border-box
  width                     calc(100% - 600px)


button
  background                #D24E34
  color                     #FEFEFE
  border                    none
  border-radius             4px
  font-size                 14px
  cursor                    pointer
  outline                   none
  padding                   10px 40px


.no-view,
.loading
  text-align                center
  color                     #647175
  font-size                 20px
  top                       50%
  transform                 translateY(-50%)


.hidden
  display                   none
