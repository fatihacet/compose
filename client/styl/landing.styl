#landing
  background                #F5F5F5

  #account-widget
    border                  1px solid #D8DDE2
    border-radius           6px
    padding                 50px 100px
    width                   600px
    height                  430px
    box-sizing              border-box
    margin                  -215px auto 0
    top                     50%
    background              #FFF
    text-align              center

  #account-gravatar
    width                   80px
    height                  80px
    border-radius           80px

  h1
    margin-top              15px
    color                   #323b3d
    font-size               16px
    font-weight             bold
    opacity                 .88
    line-height             32px

  h2
    opacity                 .5
    font-size               13px

  form
    margin-top              20px

    input
      border                1px solid #EFF2F4
      border-top            none
      width                 100%
      height                36px
      line-height           36px
      padding-left          15px
      outline               none
      box-sizing            border-box

      &:first-child
        border-top          1px solid #EFF2F4
        border-radius       4px 4px 0 0

      &:nth-of-type(3)
        border-radius       0 0 4px 4px
        margin-bottom       20px

    button
      position              absolute
      right                 0
