#compose

  width                     100%
  height                    100%
  position                  absolute
  top                       0
  left                      0
  z-index                   10
  background                rgba(0, 0, 0, 0.42)

  .widget
    width                   800px
    height                  600px
    border                  1px solid #D8DDE2
    border-radius           6px
    top                     50%
    margin                  -300px auto 0
    background              #FFF

  .buttons
    padding                 10px
    text-align              right

    button
      padding               2px 12px
      font-size             12px

    #cancel
      background            #FFF
      color                 #d24e34
      border                1px solid #d24e34

    #send
      background            #48B3FE
      border                1px solid #48B3FE

      &.sending
        opacity             .5
        cursor              not-allowed

  .row
    border-bottom           1px solid #eff2f4
    background              rgba(239, 242, 244, .33)
    height                  40px
    line-height             40px
    box-sizing              border-box
    padding                 0 10px
    font-size               14px

    &:first-child
      border-top            1px solid #eff2f4

    input
      border                none
      outline               none
      width                 85%
      font-size             14px
      background            transparent

    label
      opacity               .5
      font-size             13px
      display               inline-block
      width                 50px
      text-align            right

    img
      width                 24px
      height                24px
      border-radius         24px
      top                   5px
      left                  5px
      margin-right          5px

  textarea
    width                   100%
    height                  387px
    box-sizing              border-box
    padding                 15px
    font-size               14px
    border-radius           6px
    outline                 none
    border                  none
    resize                  none
