addBorder()
  padding-bottom            15px
  margin-bottom             35px
  border-bottom             1px solid #F1F4F5


#mail-content

  header
    addBorder()

    h1
      font-size             42px
      margin-bottom         15px
      color                 #323B3D

    p
      font-size             13px
      color                 #85898A
      margin-top            -10px

      img
        width               24px
        height              24px
        border-radius       24px
        top                 7px

    strong
      font-weight           bold
      color                 #3C4446

  pre
    font-size               16px
    color                   #434B4D
    white-space             pre-wrap
    word-wrap               break-word
    line-height             18px
    addBorder()

  .quick-reply
    text-align              right

    textarea
      display               block
      width                 100%
      height                80px
      border                1px solid #E8EEEF
      border-radius         4px
      color                 #434b4d
      font-size             14px
      padding               10px
      outline               none
      box-sizing            border-box

    .send-button
      margin-top            20px
      opacity               .5
      cursor                not-allowed
